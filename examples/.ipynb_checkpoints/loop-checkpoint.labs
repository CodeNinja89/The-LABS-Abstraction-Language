%% declarations

n: uint16;
sum: uint16;
num: uint16;

%% initialisation

n := 100u16;
sum := 0u16;
num := n;

%% preconditions
n == 100u16;

%% postconditions
sum == 5050u16;

%% program

while (num > 0u16)
    invariant (sum == (n * (n + 1u16) / 2u16) - 
                (num * (num + 1u16) / 2u16) && num >= 0u16) // invariant is not optional.
    measure num
{
    sum := sum + num;
    num := num - 1u16;
}